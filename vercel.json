{
  "version": 2,
  "builds": [
    { "src": "backend/webhook.js", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "frontend/dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/webhook.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/frontend/dist/index.html" }
  ],
  "installCommand": "npm --prefix backend ci || npm --prefix backend i && npm --prefix frontend ci || npm --prefix frontend i",
  "buildCommand": "npm --prefix frontend run build"
}