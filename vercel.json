{
  "version": 2,
  "builds": [
    { "src": "api/ai.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "styles.css", "use": "@vercel/static" },
    { "src": "app.js", "use": "@vercel/static" },
    { "src": "modules/*.js", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/ai", "dest": "/api/ai.js" },
    {
      "src": "/(.*\\.(?:js|css|html|png|jpg|svg|ico))",
      "headers": { "Cache-Control": "public, max-age=0, must-revalidate" },
      "continue": true
    },
    { "src": "/.*", "dest": "/index.html" }
  ]
}